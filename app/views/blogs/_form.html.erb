<!--フォームの宣言-->
<%=form_for(@blog,url:choose_new_or_edit ) do |f| %>　<!--分岐時にヘルパーメソッドの利用-->  
  
  <% if @blog.errors.any? %> <!--エラー存在時に以下実行-->
    <div id="error_explanation" >
      <!-- バリデーションエラーの件数を表示-->
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>

      <ul>
       <!--@blog.errorsは@blogをバリデーションした際のエラー情報-->
       <!--full_messagesは複数のエラーメッセージを表す-->
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :タイトル %> <!--指定したモデルカラムへのラベルを作成-->
  <%= f.text_field :title,class: 'form-control' %> <!--指定したモデルカラムへのテキスト欄（フォーム）を作成-->
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content,class: 'form-control' %>
  <br>
  <%= f.submit '投稿',class: 'btn btn-primary btn-block' %>
<% end %> 
<!--formの終わりを宣言-->

<%=link_to "ブログ一覧画面に戻る",blogs_path %>